{
	"name": "retro-store",
	"version": "0.1.0",
	"private": false,
	"scripts": {
		"build": "npm run build:spring && npm run build:next",
		"build:spring": "./gradlew build",
		"build:next": "next build src/main/js",
		"clean": "npm run clean:spring && npm run clean:next",
		"clean:spring": "./gradlew clean",
		"clean:next": "rm -rf node_modules && rm -rf src/main/js/.next",
		"compose:rebuild": "docker compose down && npm run clean && npm ci && npm run build && docker compose up --build backend frontend nginx",
		"lint:format": "npx @biomejs/biome check --write"
	},
	"dependencies": {
		"next": "16.1.0",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"tailwindcss": "^4",
		"typescript": "^5"
	}
}
